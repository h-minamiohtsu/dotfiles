[user]
    email = [set_mail_address]
    name = [set_user_name]

[alias]
    st = status
    ci = commit
    co = checkout
    branchall = branch -a
    # リモートで削除されたブランチも更新
    fetchall = fetch --prune
    # 差分を単語レベルで表示
    difff = diff --word-diff
    # ログをグラフ表示
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'

[color]
	ui = auto

[core]
    pager = less -r
